{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/matches",
      "dest": "/api/matches/route.js"
    },
    {
      "src": "/api/standings",
      "dest": "/api/standings/route.js"
    },
    {
      "src": "/api/teams",
      "dest": "/api/teams/route.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "github": {
    "silent": true
  }
}
