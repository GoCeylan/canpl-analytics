{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/matches",
      "dest": "/api/matches/route.js"
    },
    {
      "src": "/api/standings",
      "dest": "/api/standings/route.js"
    },
    {
      "src": "/api/teams",
      "dest": "/api/teams/route.js"
    },
    {
      "src": "/api/analytics",
      "dest": "/api/analytics/route.js"
    },
    {
      "src": "/api/health",
      "dest": "/api/health/route.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" }
      ]
    }
  ],
  "github": {
    "silent": true
  }
}
