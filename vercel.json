{
  "version": 2,
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/matches",
      "dest": "/public/data/matches.json",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Cache-Control": "s-maxage=3600"
      }
    },
    {
      "src": "/api/standings",
      "dest": "/public/data/standings.json",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Cache-Control": "s-maxage=3600"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "github": {
    "silent": true
  }
}
